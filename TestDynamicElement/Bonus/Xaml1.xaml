<UserControl
    x:Class="TestDynamicElement.Bonus.Xaml1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dataContext="clr-namespace:TestDynamicElement.Bonus.ViewModel"
    xmlns:local="clr-namespace:TestDynamicElement.Bonus"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance {x:Type dataContext:ElemViewModel}}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
        <Label>Элемент 1</Label>
        <Button
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Command="{Binding MoveText}"
            Content="Перенести во 2 элемент" IsEnabled="{Binding ElemModel.Blok1}" />
        <TextBox Text="{Binding ElemModel.TextElem1}" IsEnabled="{Binding ElemModel.Blok1, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</UserControl>
