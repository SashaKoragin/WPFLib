<UserControl
    x:Class="TestDynamicElement.Bonus.Xaml2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dataContext="clr-namespace:TestDynamicElement.Bonus.ViewModel"
    xmlns:local="clr-namespace:TestDynamicElement.Bonus"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance {x:Type dataContext:ElemViewModel}}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Label>Елемент 2</Label>
            <Button
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Command="{Binding MoveText}"
                Content="Перенести в 1 элемент"
                IsEnabled="{Binding ElemModel.Blok2}" />
            <TextBox IsEnabled="{Binding ElemModel.Blok2}" Text="{Binding ElemModel.TextElem2, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</UserControl>
